<p>ログイン完了ユーザ: <%= current_user.name %></p>
    
    <h1>タスク一覧</h1>
    
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>ステータス</th>
                    <th>タスク</th>
                </tr>
            </thead>
            <tbody>
                <% @tasks.each do |task| %>
                    
                    <tr>
                        <th><%= link_to(task.id, task) %> </th>
                        <th><%= task.status %> </th>
                        <th><%= task.content %> </th>
                    </tr>
                <% end %>
            </tbody>
        </table>
        
    <%= link_to '新規タスクの投稿', new_task_path, class:"btn btn-success" %>